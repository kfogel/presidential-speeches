            <span class="media-video">video icon</span>
                <span class="media-audio">audio icon</span>
                <span class="media-transcript">transcript icon</span>
    </section>

</div>

  </div>
    <div class="views-row">
    <div class="speech-row-wrapper">
  <section class="speech-text-column">
      <a href="/the-presidency/presidential-speeches/january-12-1977-state-union-address" hreflang="en">January 12, 1977: State of the Union Address</a>
  </section>
  <section class="speech-icons-column">
            <span class="media-video">video icon</span>
                <span class="media-audio">audio icon</span>
